<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <filter>
        <filter-name>CharsetEncodingFilter</filter-name>
        <filter-class>com.cn.thu.web.CharsetEncodingFilter</filter-class>
        <init-param>
            <param-name>charEncode</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharsetEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>timeSearch</servlet-name>
        <servlet-class>com.cn.thu.web.TimeSearch</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>timeSearch</servlet-name>
        <url-pattern>/timeSearch</url-pattern>
    </servlet-mapping>
     <servlet>
         <servlet-name>sortSearch</servlet-name>
         <servlet-class>com.cn.thu.web.SortSearch</servlet-class>
     </servlet>
    <servlet-mapping>
        <servlet-name>sortSearch</servlet-name>
        <url-pattern>/sortSearch</url-pattern>
    </servlet-mapping>
    <servlet>
         <servlet-name> showImage </servlet-name>
         <servlet-class>com.cn.thu.web.showImage</servlet-class>
     </servlet>
    <servlet-mapping>
        <servlet-name>showImage</servlet-name>
        <url-pattern>/showImage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>turnPage</servlet-name>
        <servlet-class>com.cn.thu.web.TurnPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>turnPage</servlet-name>
        <url-pattern>/turnPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>showComplexResult</servlet-name>
        <servlet-class>com.cn.thu.web.ShowComplexResult</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showComplexResult</servlet-name>
        <url-pattern>/showComplexResult</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowPageResult</servlet-name>
        <servlet-class>com.cn.thu.web.ShowPageResult</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowPageResult</servlet-name>
        <url-pattern>/showPageResult</url-pattern>
    </servlet-mapping>
      <servlet>
          <servlet-name>showResult</servlet-name>
           <servlet-class>com.cn.thu.web.ShowResult </servlet-class>
      </servlet>
    <servlet-mapping>
        <servlet-name>showResult</servlet-name>
        <url-pattern>/showResult</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showDetails</servlet-name>
        <servlet-class>com.cn.thu.web.showDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showDetails</servlet-name>
        <url-pattern>/showDetails</url-pattern>
    </servlet-mapping>

     </web-app>
